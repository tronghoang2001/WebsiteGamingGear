@using GamingGear.Models
@model GamingGear.Models.Account.DangKy
@{
    ViewBag.Title = "DangKy";
    Layout = null;
}


<body class="preloading">
    <!-- partial:index.partial.html -->
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="~/css/myCss/loginstyle.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    <div id="form">
        @using (Html.BeginForm("DangKy", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="container">

                <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-md-8 col-md-offset-2">
                    <div id="userform">
                        <ul class="nav nav-tabs nav-justified">
                            <li class="active"><a href="@Url.Action("DangKy", "Account")">Đăng ký</a></li>
                            <li class="active"><a href="@Url.Action("DangNhap", "Account")">Đăng nhập</a></li>
                        </ul>


                        <div class="tab-content">
                            <h2 class="text-uppercase text-center">Đăng ký</h2>
                            <h4>@ViewBag.ThongBao</h4>
                            <form>
                                @using (Html.BeginForm())
                                {
                                    @Html.ValidationSummary(true)


                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="form-group">
                                        <input class="form-control" data-val="true" data-val-length="The field ten must be a string with a maximum length of 50."
                                               data-val-length-max="50" data-val-required="The ten field is required." id="taiKhoan" name="taiKhoan" placeholder="Nhập tài khoản" type="text" value="">

                                        <p class="help-block text-danger"></p>
                                    </div>
                                    <div class="form-group">
                                        <input class="form-control" data-val="true" data-val-length="The field matKhau must be a string with a maximum length of 200."
                                               data-val-length-max="200" data-val-required="The matKhau field is required." id="matKhau" name="matKhau" placeholder="Nhập mật khẩu" type="password" value="">
                                        <p class="help-block text-danger"></p>
                                    </div>
                                    <div class="form-group">
                                        <input class="form-control" data-val="true" data-val-length="The field matKhau must be a string with a maximum length of 200."
                                               data-val-length-max="200" data-val-required="The matKhau field is required." id="xacNhanMatKhau" name="xacNhanMatKhau" placeholder="Nhập lại mật khẩu" type="password" value="">

                                        <p class="help-block text-danger"></p>
                                    </div>
                                    <div class="form-group">
                                        <input class="form-control" data-val="true" data-val-length="The field matKhau must be a string with a maximum length of 200."
                                               data-val-length-max="200" data-val-required="The matKhau field is required." id="Email" name="Email" placeholder="Nhập Email" type="email" value="">

                                        <p class="help-block text-danger"></p>
                                    </div>
                                    <div class="form-group">
                                        <input class="form-control" data-val="true" data-val-length="The field matKhau must be a string with a maximum length of 200."
                                               data-val-length-max="200" data-val-required="The matKhau field is required." id="ten" name="ten" placeholder="Nhập họ tên" type="text" value="">
                                        <p class="help-block text-danger"></p>
                                    </div>
                                    <div class="form-group">
                                        <input class="form-control" data-val="true" data-val-length="The field matKhau must be a string with a maximum length of 200."
                                               data-val-length-max="200" data-val-required="The matKhau field is required." id="soDienThoai" name="soDienThoai" placeholder="Nhập số điện thoại" type="number" value="">

                                        <p class="help-block text-danger"></p>
                                    </div>
                                    <div class="form-group">
                                        <input class="form-control" data-val="true" data-val-length="The field matKhau must be a string with a maximum length of 200."
                                               data-val-length-max="200" data-val-required="The matKhau field is required." id="ngaySinh" name="ngaySinh" placeholder="Nhập ngày sinh" type="date" value="">
                                        <p class="help-block text-danger"></p>
                                    </div>
                                    <div class="form-group">
                                        <input class="form-control" data-val="true" data-val-length="The field matKhau must be a string with a maximum length of 200."
                                               data-val-length-max="200" data-val-required="The matKhau field is required." id="diaChi" name="diaChi" placeholder="Nhập địa chỉ" type="text" value="">
                                        <p class="help-block text-danger"></p>
                                    </div>
                                    <label style="padding-top:10px">Giới tính</label>
                                    <div>
                                        <label class="radio-inline"><input id="gioiTinh" name="gioiTinh" type="radio" value="1">Nam</label>
                                        <label class="radio-inline"><input id="gioiTinh" name="gioiTinh" type="radio" value="2">Nữ</label>
                                        <label class="radio-inline"><input id="gioiTinh" name="gioiTinh" type="radio" value="3">Khác</label>
                                    </div>
                                    @ViewBag.Fail
                                    <div class="mrgn-30-top">
                                        <button type="submit" class="btn btn-larger btn-block">
                                            Tạo tài khoản
                                        </button>
                                    </div>
                                }
                            </form>

                        </div>

                    </div>
                </div>
            </div>
            <!-- /.container -->
        }
    </div>
    <script src="//code.jquery.com/jquery-1.11.3.min.js"></script>
    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

    <!-- partial -->
    <script src="./script.js"></script>

    <script type="text/javascript" src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script type="text/javascript" src="~/Scripts/scritps.js"></script>

</body>



