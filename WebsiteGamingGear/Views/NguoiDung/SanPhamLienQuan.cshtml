@model IEnumerable<WebsiteGamingGear.Models.SanPham>
@{
    ViewBag.Title = "SanPhamLienQuan";
    Layout = null;
}

<div class="row">
    <div class="product-active owl-carousel">
        @foreach (var sanpham in Model)
        {
            <div class="col-lg-12">
                <!-- single-product-wrap start -->
                <div class="single-product-wrap">
                    <div class="product-image">
                        <a href="@Url.Action("ChiTietSanPham", "NguoiDung", new { id = sanpham.idSanPham})">
                            <img src="~/Content/images/@sanpham.hinhAnh"
                                 alt="Li's Product Image" />
                        </a>
                    </div>
                    <div class="product_desc">
                        <div class="product_desc_info">
                            <div class="rating-box">
                                <ul class="rating">
                                    <li><i class="fa fa-star-o"></i></li>
                                    <li><i class="fa fa-star-o"></i></li>
                                    <li><i class="fa fa-star-o"></i></li>
                                    <li><i class="fa fa-star-o"></i></li>
                                    <li><i class="fa fa-star-o"></i></li>
                                </ul>
                            </div>
                            <h4>
                                <a class="product_name" href="@Url.Action("ChiTietSanPham", "NguoiDung", new { id = sanpham.idSanPham})">@sanpham.tenSanPham</a>
                            </h4>
                            <div class="price-box">
                                <span class="new-price">@String.Format("{0:0,0}", sanpham.gia) VNĐ</span>
                            </div>
                        </div>
                        <div class="add-actions">
                            <ul class="add-actions-link">
                                <li class="add-cart active">
                                    <a href="@Url.Action("ThemGioHang", "GioHang", new { @iIdSanPham = sanpham.idSanPham, @strURL = Request.Url.ToString() })">Mua hàng</a>
                                </li>
                                <li>
                                    <a href="#"
                                       title="quick view"
                                       class="quick-view-btn"
                                       data-toggle="modal"
                                       data-target="#exampleModalCenter">
                                        <i class="fa fa-eye"></i>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <!-- single-product-wrap end -->
            </div>
        }
    </div>
</div>





